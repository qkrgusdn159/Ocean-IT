<%include includes/header.ejs%>
<%var row = field[0];%>
<section id="main" class="wrapper">
    <div class="inner">
        <header class="align-center">
            <h2>연구 분야</h2>
            <p>연구소의 연구분야 게시판</p>
        </header>
        <hr class="major"/>
        <h3 class="align-center"></h3>
        <div class="table-wrapper">
            <table class="align-center">
                <thead>
                <div class="table-wrapper">
                    <table class="alt">
                        <tbody class="align-center">
                        <tr>
                            <td >사업명</td>
                            <td class="align-left" colspan="4"><%= row.research_name_ko%></td>
                        </tr>
                        <tr>
                            <td>주관기관</td>
                            <td class="align-left">해양IT 연구소</td>
                            <td rowspan="2" style="vertical-align:middle;">연구책임자</td>
                            <td>성명</td>
                            <td class="align-left"><%= row.research_charge_ko%></td>
                        </tr>
                        <tr>
                            <td>지원기관</td>
                            <td class="align-left"></td>
                            <td>소속</td>
                            <td class="align-left"><%= row.support_organization_ko%></td>
                        </tr>
                        <tr>
                            <td>연구 기간</td>
                            <td class="align-left"><%=row.date_start + " ~ " + row.date_end%></td>
                            <td>연구진행상태</td>
                            <td class="align-left" colspan="2">연구 진행중</td>
                        </tr>
                        <tr>
                            <td>연구 목표</td>
                            <td colspan="4" class="align-left"><%= row.research_purpose_ko%></td>
                        </tr>
                        <tr>
                            <td>연구 내용</td>
                            <td colspan="4" class="align-left"><%= row.research_contents_ko%></td>
                        </tr>
                        <tr>
                            <td>연구 성과</td>
                            <td colspan="4" class="align-left"><%= row.research_expected_ko%></td>
                        </tr>

                        </tbody>
                    </table>
                </div>
                <div style="float:right">
                    <a href="/research_fields/page/1" class="button">목록</a>
                </div>
                </thead>
            </table>
        </div>
    </div>
</section>
<%include includes/footer.ejs%>